<h1 class="pt-4 pb-4" >Companies</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Id</th>
      <th>Name</th>
      <th>Email</th>
      <th>Phone number</th>
      <th>Description</th>
      <th class="text-center">Show</th>
      <th class="text-center">Edit</th>
      <th class="text-center">Delete</th>
    </tr>
  </thead>

  <tbody>
    <% @companies.each do |company| %>
      <tr>
        <td><%= company.id %></td>
        <td><%= company.name %></td>
        <td><%= company.email %></td>
        <td><%= company.phone_number %></td>
        <td><%= company.description %></td>
        <td class="text-center"><%= link_to company, class: "text-white btn btn-success" do fa_icon "eye" end %></td>
        <td class="text-center"><%= link_to edit_company_path(company), class: "text-white btn btn-primary" do  fa_icon "edit"  end %></td>
        <td class="text-center"><%= link_to company, method: :delete, data: { confirm: 'Are you sure?' }, class: "text-white btn btn-danger" do fa_icon "trash" end %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Company', new_company_path, class: "btn btn-secondary text-white" %>
